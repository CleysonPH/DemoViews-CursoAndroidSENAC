<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Demonstração das Android Views"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFF"
        android:padding="5dp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btnTextViewDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView Demo"/>

    <Button
        android:id="@+id/btnEditTextDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="edittext demo"/>

    <Button
        android:id="@+id/btnImageViewDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="imageview demo"/>

    <Button
        android:id="@+id/btnAutoCompleteDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Autocomplete demo"/>

    <Button
        android:id="@+id/btnImageButtonDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ImageButton view"/>

    <Button
        android:id="@+id/btnCheckbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CheckBox e ToggleButton Demo"/>

    <Button
        android:id="@+id/btnProgressDiologDemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ProgressDialog demo"/>

    <Button
        android:id="@+id/btnAlertDialogActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AlertDialog e Toast"/>

</LinearLayout>
